<div class="container">
	<div class="row">
		<div ng-controller="TweetController" class="text-center mt-lg">
			<div class="col-md-12">
			<input class="form-control search-bar mb-lg mt-lg" placeholder="Search Tweets..." type="text" name="input" ng-model="search.text" ng-pattern="example.text" required ng-trim="false">
			<button class="btn btn-twitter" ng-click="fetch(search.text)">Search</button>
		   </div>
				<div class="col-md-6 col-md-offset-3">
					<div ng-repeat="tweet in tweetdata">
		      	<div class="panel panel-default">
  						<div class="panel-body">
  							<div class="col-md-2">
  							<img src="{{tweet.profile_image_url}}">
  							</div>
  							<div class="col-md-9">
  							<div class="user-screen-name">{{tweet.user}}</div>
    						<div class="tweet-text">{{tweet.text}}</div>
    						</div>
  					</div>
					</div>
		    </div>
			</div>
		</div>
	</div>
</div>

